extends ../layout
block dependencies
    - var pageTitle = "Cambiar contraseña";
    - var css = ["/css/signin.css"];
    - if (typeof error === "undefined") error = null;
block content
    .container
        form.form-signin(method="POST", action="/force-pw-reset")
            input(type='hidden', name='_csrf', value=_csrf)
            h2.form-signin-heading Cambia tu contraseña
            p Necesitas cambiar tu contraseña para continuar utilizando el sitio.
            br
            label.sr-only(for="inputPassword") Contraseña
            input.form-control#inputPassword(type="password", placeholder="Contraseña", name="password", required, autofocus)
            label.sr-only(for="inputPasswordC") Repetir contraseña
            input.form-control#inputPasswordC(type="password", placeholder="Repetir contraseña", name="confirmPassword", required)
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Cambiar contraseña
            if error
                br
                .alert.alert-danger #[strong Oh no!] #{error.message}
